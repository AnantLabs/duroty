<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />	
	<form-beans/>	
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action path="/chat/index"
			type="com.duroty.application.chat.actions.IndexAction"
			scope="request" 
			validate="false">
			<forward name="success" path="/chat/index.jsp" />
			<forward name="failure" path="/chat/index.jsp" />
		</action>	
	</action-mappings>
</struts-config>

