<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<global/>
	<formset>
		<form name="login">
			<field property="j_username" depends="required">
				<arg0 key="ErrorMessages.login.username.required"/>
			</field>
			
			<field property="j_password" depends="required">
				<arg0 key="ErrorMessages.login.password.required"/>
			</field>
		</form>
		
		<form name="formRegisterUser">
			<field property="name" />
			<field property="email" />
			<field property="username" />
			<field property="password" />
			<field property="confirmPassword" />
			<field property="j_captcha_response" />
		</form>
		
		<form name="formUser">
			<field property="name" />
			<field property="email" />
			<field property="language" />
			<field property="signature" />
			<field property="vacationResponderActive" />
			<field property="vacationResponderSubject" />
			<field property="vacationResponderBody" />
			<field property="htmlMessages" />
			<field property="byPage" />
			<field property="spamTolerance" />			
			<field property="idint" />
			<field property="emailIdentity" />
			<field property="quotaSize" />
			<field property="roles" />
			<field property="spamTolerance" />
			<field property="username" />
			<field property="password" />
			<field property="confirmPassword" />
		</form>
		
		<form name="formLabel">
			<field property="name" depends="required">
				<arg0 key="ErrorMessages.labels.name.required"/>
			</field>
			
			<field property="from" />
			<field property="to" />
			<field property="subject" />
			<field property="hasWords" />
			<field property="doesntHaveWords" />
			<field property="hasAttachment" />
			<field property="archive" />
			<field property="important" />
			<field property="forward" />
			<field property="trash" />			
			<field property="operator" />    
		</form>	
		
		<form name="formSettings">
			<field property="name" />
			<field property="contactEmail" depends="required">
				<arg0 key="ErrorMessages.settings.contactEmail.required"/>
			</field>
			<field property="language" />
			<field property="signature" />
			<field property="vacationResponderActive" />
			<field property="vacationResponderSubject" />
			<field property="vacationResponderBody" />
			<field property="htmlMessage" />
			<field property="byPage" />
			<field property="spamTolerance" />
		</form>
		
		<form name="formContacts">
			<field property="idint" depends="required">
				<arg0 key="ErrorMessages.contacts.idint.required"/>
			</field>
		</form>
		
		<form name="formGroups">
			<field property="idint" depends="required">
				<arg0 key="ErrorMessages.groups.idint.required"/>
			</field>
		</form>
		
		<form name="formFilter">
			<field property="label"/>
			<field property="name"/>			
			<field property="from" />
			<field property="to" />
			<field property="subject" />
			<field property="hasWords" />
			<field property="doesntHaveWords" />
			<field property="hasAttachment" />
			<field property="archive" />
			<field property="important" />
			<field property="forward" />
			<field property="trash" />			
			<field property="operator" />    
		</form>
		
		<form name="formUpdateFilter">
			<field property="idint" depends="required">
				<arg0 key="ErrorMessages.filter.idint.required"/>
			</field>
			<field property="label"/>
			<field property="name"/>			
			<field property="from" />
			<field property="to" />
			<field property="subject" />
			<field property="hasWords" />
			<field property="doesntHaveWords" />
			<field property="hasAttachment" />
			<field property="archive" />
			<field property="important" />
			<field property="forward" />
			<field property="trash" />			
			<field property="operator" />    
		</form>
		
		<form name="formUpdateLabel">
			<field property="idint" depends="required">
				<arg0 key="ErrorMessages.labels.idint.required"/>
			</field>
			<field property="name" depends="required">
				<arg0 key="ErrorMessages.labels.name.required"/>
			</field>
		</form>
		
		<form name="formUpdateFilter">
			<field property="idint" depends="required">
				<arg0 key="ErrorMessages.filter.idint.required"/>
			</field>
			<field property="label"/>
			<field property="name"/>			
			<field property="from" />
			<field property="to" />
			<field property="subject" />
			<field property="hasWords" />
			<field property="doesntHaveWords" />
			<field property="hasAttachment" />
			<field property="archive" />
			<field property="important" />
			<field property="forward" />
			<field property="trash" />			
			<field property="operator" />    
		</form>
		
		<form name="formBookmark">
			<field property="idint"/>
			<field property="url" depends="required">
				<arg0 key="ErrorMessages.bookmark.url.required"/>
			</field>
			<field property="title"/>
			<field property="keywords"/>			
			<field property="comments" />
			<field property="flagged" />
		</form>
		
		<form name="formNotebook">
			<field property="url" depends="required">
				<arg0 key="ErrorMessages.bookmark.url.required"/>
			</field>
			<field property="title"/>
			<field property="keywords"/>			
			<field property="comments" />
			<field property="flagged" />
		</form>
		
		<form name="formContact">
			<field property="email" depends="required">
				<arg0 key="ErrorMessages.contact.email.required"/>
			</field>
			<field property="action" />
			<field property="name" />
			<field property="description" />
		</form>	
		
		<form name="formGroup">
			<field property="action" />
			<field property="name" depends="required">
				<arg0 key="ErrorMessages.group.name.required"/>
			</field>
			<field property="emails" depends="required">
				<arg0 key="ErrorMessages.group.emails.required"/>
			</field>			
		</form>	
		
		<form name="formIdentity">
			<field property="name" depends="required">
				<arg0 key="ErrorMessages.identity.name.required"/>
			</field>
			
			<field property="email" depends="required">
				<arg0 key="ErrorMessages.identity.email.required"/>
			</field>
			
			<field property="replyTo" />
			<field property="default" />
		</form>
		
		<form name="formInvitateToChat">
			<field property="identity" depends="required">
				<arg0 key="ErrorMessages.identity.name.required"/>
			</field>
			
			<field property="to" depends="required">
				<arg0 key="ErrorMessages.to.required"/>
			</field>
			
			<field property="priority" />
		</form>
	</formset>
</form-validation>